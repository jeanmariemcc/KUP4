
   {{> headerOut}}  
  <form action="#/registerForm" method="POST">

    <div class="text-center mb-4">
      <h1 class="h3 mb-3 font-weight-normal">Sign-Up</h1>
      <p>Register yourself once and create/join awesome events!</p>
    </div>

    <div class="form-label-group">
      <input type="text" id="inputUsername" name="userid" class="form-control" placeholder="Username" required=""
        autofocus="">
      <label for="userid">Username</label>
    </div>

    <div class="form-label-group">
      <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password" required="">
      <label for="password">Password</label>
    </div>

    <div class="form-label-group">
      <input type="password" id="inputRePassword" name="rePassword" class="form-control" placeholder="Re-Password"
        required="">
      <label for="rePassword">Re-Password</label>
    </div>

    <button class="btn btn-lg btn-dark btn-block" type="submit">Sign Up</button>

    <div class="text-center mb-4">
      <p class="alreadyUser"> Already have account? Then just
        <a href="#/signinForm">Sign-In</a>!
      </p>
    </div>

    <p class="mt-5 mb-3 text-muted text-center">Â© UniEnt - 2021.</p>

  </form>
